{
  "name": "ai-studio",
  "private": true,
  "version": "0.1.110",
  "workspaces": [
    "blocklets/*",
    "packages/*"
  ],
  "author": "Arcblock <blocklet@arcblock.io> https://github.com/blocklet",
  "scripts": {
    "dev": "yarn workspace @blocklet/co-git dev & yarn workspace @blocklet/studio-ui dev & yarn workspace @blocklet/prompt-editor dev & yarn workspace ai-studio dev",
    "bundle": "npm run build:libs && yarn workspace ai-studio bundle",
    "lint": "npm run build:libs && yarn workspaces run lint",
    "build": "npm run build:libs && yarn workspace ai-studio build",
    "clean": "yarn workspaces run clean",
    "build:libs": "yarn workspace @blocklet/co-git build && yarn workspace @blocklet/studio-ui build && yarn workspace @blocklet/prompt-editor build",
    "prepare": "husky install",
    "bump-version": "zx scripts/bump-version.mjs",
    "update:deps": "yarn workspaces run update:deps"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "importSort": {
    ".js, .jsx, .mjs": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "devDependencies": {
    "@arcblock/eslint-config": "^0.2.3",
    "@arcblock/eslint-config-ts": "^0.2.3",
    "bumpp": "^8.2.1",
    "eslint": "^8.27.0",
    "husky": "^8.0.2",
    "import-sort-style-module": "^6.0.0",
    "lerna": "^7.3.0",
    "lint-staged": "^12.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "prettier-plugin-import-sort": "^0.0.7",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4",
    "zx": "^7.1.1"
  },
  "resolutions": {
    "@arcblock/did-auth": "^1.18.92",
    "@arcblock/did-util": "^1.18.92",
    "@arcblock/did": "^1.18.92",
    "@arcblock/ws": "^1.18.92",
    "@arcblock/jwt": "^1.18.92",
    "@ocap/asset": "^1.18.92",
    "@arcblock/validator": "^1.18.92",
    "@blocklet/sdk": "1.16.17-beta-7ec31a60",
    "@nedb/core": "^2.1.5",
    "@mui/material": "^5.11.11",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8"
  }
}
