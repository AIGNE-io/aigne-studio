{
  "name": "ai-studio",
  "private": true,
  "version": "0.5.16",
  "workspaces": [
    "blocklets/*",
    "packages/*",
    "framework/*"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "author": "Arcblock <blocklet@arcblock.io> https://github.com/blocklet",
  "scripts": {
    "dev": "pnpm -F ai-studio dev",
    "bundle": "pnpm build:libs && pnpm bundle:ai-studio && pnpm bundle:ai-runtime",
    "bundle:ai-studio": "pnpm -F ai-studio bundle",
    "bundle:ai-runtime": "pnpm -F ai-runtime bundle",
    "lint": "pnpm --workspace-concurrency=2 -r run lint",
    "lint:fix": "pnpm --workspace-concurrency=2 -r run lint:fix",
    "build": "pnpm build:libs && pnpm -F ai-studio build",
    "clean": "pnpm -r run clean",
    "clean:deps": "rimraf ./**/node_modules",
    "build:libs": "pnpm --workspace-concurrency=2 -F @blocklet/* build",
    "bump-version": "zx scripts/bump-version.mjs",
    "update:deps": "npx -y taze latest -r -w -n '/blocklet|abtnode|arcblock|ocap|did-space|nft-studio|aigne/' && pnpm install && pnpm dedupe",
    "test": "pnpm -r run test",
    "e2e": "CI=true npx playwright test",
    "e2e:ui": "NODE_ENV=development npx playwright test --ui",
    "postinstall": "npx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,mts,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "importSort": {
    ".js, .jsx, .mjs": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx, .mts": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "devDependencies": {
    "@arcblock/did": "^1.24.8",
    "@arcblock/did-ext": "^1.24.8",
    "@arcblock/eslint-config": "^0.3.3",
    "@arcblock/eslint-config-ts": "^0.3.3",
    "@blocklet/ai-runtime": "workspace:^",
    "@blocklet/testlab": "^0.0.23",
    "@ocap/util": "^1.24.8",
    "@playwright/test": "^1.54.2",
    "bumpp": "^9.5.2",
    "code-inspector-plugin": "^1.2.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.2.1",
    "import-sort-style-module": "^6.0.0",
    "lerna": "^8.1.8",
    "lint-staged": "^15.2.9",
    "node-gyp-build": "~4.8.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-import-sort": "^0.0.7",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "start-server-and-test": "^2.0.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "zx": "^8.1.4"
  }
}
