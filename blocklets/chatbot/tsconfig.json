{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./src/*"],
      "@api/*": ["./api/src/*"],
      // For local dev
      "@aigne/core": ["../../framework/core/src"],
      "@aigne/core/*": ["../../framework/core/src/*"],
      "@aigne/runtime": ["../../framework/runtime/src"],
      "@aigne/runtime/*": ["../../framework/runtime/src/*"],
      "@aigne/memory": ["../../framework/memory/src"],
      "@aigne/memory/*": ["../../framework/memory/src/*"]
    }
  }
}
