{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./src/*"],
      "@api/*": ["./api/src/*"],
      // For local dev
      // "@blocklet/ai-kit/*": ["../../../ai-kit/packages/ai-kit/src/*"],
      // "@blocklet/pages-kit/*": ["../../../pages-kit/packages/pages-kit/src/*"],
      "@aigne/runtime": ["../../framework/runtime/src"],
      "@aigne/runtime/*": ["../../framework/runtime/src/*"],
      "@blocklet/ai-runtime": ["../../packages/ai-runtime/src"],
      "@blocklet/ai-runtime/*": ["../../packages/ai-runtime/src/*"],
      "@blocklet/aigne-sdk/*": ["../../packages/aigne-sdk/src/*"],
      "@blocklet/code-editor": ["../../packages/code-editor/src"],
      "@blocklet/co-git": ["../../packages/co-git/src"],
      "@blocklet/dataset-sdk": ["../../packages/dataset-sdk/src"],
      "@blocklet/dataset-sdk/*": ["../../packages/dataset-sdk/src/*"],
      "@blocklet/co-git/*": ["../../packages/co-git/src/*"],
      "@blocklet/studio-ui": ["../../packages/studio-ui/src"],
      "@blocklet/prompt-editor": ["../../packages/prompt-editor/src"],
      "@blocklet/prompt-editor/*": ["../../packages/prompt-editor/src/*"],
      "@blocklet/quickjs": ["../../packages/quickjs/src"],
      "@blocklet/quickjs/*": ["../../packages/quickjs/src/*"],
      "@aigne/memory": ["../../framework/memory/src"],
      "@aigne/memory/*": ["../../framework/memory/src/*"]
    }
  }
}
