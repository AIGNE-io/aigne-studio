{
  "extends": "./tsconfig",
  "compilerOptions": {
    "incremental": false,
    "outDir": "api/dist",
    "noEmit": false,
    "noEmitOnError": true,
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./src/*"],
      "@api/*": ["./api/src/*"]
    }
  },
  "include": ["api/*.d.ts", "api/src"]
}
