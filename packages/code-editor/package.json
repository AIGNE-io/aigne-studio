{
  "name": "@blocklet/code-editor",
  "version": "0.4.80",
  "description": "Code Editor",
  "publishConfig": {
    "access": "public"
  },
  "author": "Arcblock <blocklet@arcblock.io> https://github.com/blocklet",
  "homepage": "https://github.com/blocklet/ai-studio#readme",
  "license": "ISC",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/types/index.d.js",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "types": "./lib/types/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./lib/types/index.d.ts"
      ]
    }
  },
  "files": [
    "lib",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blocklet/ai-studio.git"
  },
  "scripts": {
    "lint": "eslint src --ext .mjs,.js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc -p tsconfig.build.json --noEmit && run-p build:* && npm run copyfiles",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir lib/cjs > /dev/null || exit 0",
    "build:esm": "tsc -p tsconfig.build.json --module es2022 --outDir lib/esm > /dev/null || exit 0",
    "build:types": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --outDir lib/types > /dev/null || exit 0",
    "copyfiles": "run-p copyfiles:*",
    "copyfiles:cjs": "copyfiles -u 1 src/**/*.css lib/cjs",
    "copyfiles:esm": "copyfiles -u 1 src/**/*.css lib/esm",
    "dev": "run-p 'build:* -- -w'",
    "clean": "rimraf lib",
    "prepublishOnly": "npm run build",
    "test": "jest src/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@emotion/css": "^11.13.0",
    "@iconify-icon/react": "^2.1.0",
    "@iconify-icons/tabler": "^1.2.95",
    "@monaco-editor/react": "^4.6.0",
    "@shikijs/monaco": "^1.14.1",
    "ahooks": "^3.8.1",
    "emmet-monaco-es": "^5.4.0",
    "flat": "^6.0.1",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "material-ui-popup-state": "^5.1.2",
    "monaco-editor": "^0.51.0",
    "monaco-vim": "^0.4.1",
    "nanoid": "^3.3.7",
    "prettier": "^3.3.3",
    "react-hook-form": "^7.53.0",
    "react-resizable": "^3.0.5",
    "react-transition-group": "^4.4.5",
    "shiki": "^1.14.1",
    "ufo": "^1.5.4"
  },
  "peerDependencies": {
    "@mui/material": "^5.14.11",
    "react": "^18.2.0",
    "react-router-dom": "^6.16.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.7.0",
    "@jest/globals": "^29.7.0",
    "@mui/material": "^5.16.7",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-onboarding": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@types/lodash": "^4.17.7",
    "@types/mustache": "^4.2.5",
    "@types/react": "^18.3.4",
    "@types/react-resizable": "^3.0.8",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "react": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "rimraf": "^6.0.1",
    "storybook": "^8.2.9",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  }
}
